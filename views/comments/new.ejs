<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <h1>Add a new Comment to <a href="/campgrounds/<%= campground._id%>" class="text-primary"><%= campground.name %></a></h1>
            
            <div>
                <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                    <div class="form-group">
                        <input class="form-control" name="comment[text]" type="text" placeholder="Comment" required></input>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-large btn-primary" type="submit">Add Comment</button>
                    </div>
                    <a href="/campgrounds/<%= campground._id%>">Go Back!</a>
                </form>
            </div>
        </div>
        
        <% include ../partials/footer %>
    </div>
</div>