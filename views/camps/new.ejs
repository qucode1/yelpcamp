<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <h1>Add a new Campground</h1>
            
            <div>
                <form action="/campgrounds" method="post">
                    <div class="form-group">
                        <input class="form-control" name="newCampName" type="text" placeholder="Camp Name" required></input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="newCampImage" type="text" placeholder="Camp Image Link" required></input>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="newCampDescription" type="text" placeholder="Camp Description" required></textarea>
                    </div>                
                    <div class="form-group">
                        <button class="btn btn-large btn-primary" type="submit">Add Camp</button>
                    </div>
                    <a href="/campgrounds">Go Back!</a>
                </form>
            </div>            
        </div>
        
        
        <% include ../partials/footer %>
    </div>
</div>